{
  "name": "peterplate",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": "20.x",
    "pnpm": "^10.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "cron:daily": "pnpm -F @peterplate/server test:daily",
    "cron:weekly": "pnpm -F @peterplate/server test:weekly",
    "db:generate": "pnpm -F db db:generate",
    "db:migrate": "pnpm -F db db:migrate",
    "db:studio": "pnpm --filter db run db:studio",
    "db:dump": "pg_dump -h icssc.cf3yrjegcna8.us-east-1.rds.amazonaws.com -U peterplate_prod -W -O -x peterplate > ./docker/db/peterplate.sql",
    "dev": "pnpm -F @peterplate/next dev",
    "dev:graphql": "turbo dev --filter=./packages/graphql",
    "dev:data": "pnpm -F @peterplate/server test:weekly",
    "deploy": "npx sst deploy --stage production",
    "deploy:dev": "npx sst deploy --stage dev",
    "format": "pnpm biome format",
    "format:fix": "pnpm biome format --write",
    "lint": "pnpm biome lint",
    "lint:fix": "pnpm biome lint --fix",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "sst:dev": "npx sst dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@peterplate/prettier-config": "workspace:*",
    "@turbo/gen": "catalog:",
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.4.2",
    "devmoji": "^2.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "catalog:",
    "sst": "^3.0.0",
    "ts-node": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@peterplate/prettier-config",
  "pnpm": {
    "overrides": {
      "@auth/core": "0.20.0"
    }
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}